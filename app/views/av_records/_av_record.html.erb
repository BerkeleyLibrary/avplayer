<section class="av_record">
  <h1><%= record.title %></h1>

  <% record.files.each do |file| %>
    <section class="player">
      <audio class="mejs__player" controls>
        <source src="<%= file.streaming_url %>" type="<%= file.mime_type %>"/>
      </audio>
    </section>
  <% end %>

  <%= render(partial: 'tind/record', locals: {metadata_record: record.metadata_record}) %>
</section>

<% if Rails.env.production? %>
  <!--
  <%= render(partial: 'av_records/debug.txt', formats: :raw, locals: {record: record}) %>
  -->
<% else %>
  <aside>
      <pre>
        <%= render(partial: 'av_records/debug.txt', formats: :raw, locals: {record: record}) %>
      </pre>
  </aside>
<% end %>
