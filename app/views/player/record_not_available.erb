<% content_for(:title, 'Audio / Video: Record not available') %>

<section class="record">
  <h1>Record not available</h1>

  <p>
    The specified record is available to UC Berkeley users only. For full access,
    <%= link_to('log in with Calnet', login_path(url: request.fullpath)) %> or
    <%= link_to('use the bSecure VPN', 'https://www.lib.berkeley.edu/using-the-libraries/vpn') %>.
  </p>

  <table>
    <thead>
    <tr>
      <th colspan="2"><h2>Details</h2></th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <th>Collection</th>
      <td><p><%= collection %></p></td>
    </tr>
    <tr>
      <th>Record ID</th>
      <td><p><%= record_id %></p></td>
    </tr>
    </tbody>
  </table>

</section>
